@model MachineApp.Models.Category
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Skapa kategori";
}


<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            //edit
            title = "Redigera kategori";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control mb-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Kategorinamn krävs, måste vara högst 50 bokstäver!"></i>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-8 offset-3">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id"  />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton"  />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
   
}


