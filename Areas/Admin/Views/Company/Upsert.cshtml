@model MachineApp.Models.Company
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Skapa företag";
}


<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            //edit
            title = "Redigera företag";
        }
        <div class="col-11 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-1">
            <i class="far fa-question-circle" data-toggle="tooltip" title="Om något företag vill registrera sig som ett företagskonto,
                         de måste komma i kontakt med administratörer.
                       När administratörer skapar ett nytt företagskonto kan de markera företaget som auktoriserat eller så kan de lämna det Icke auktoriserat.
                        Icke auktoriserat företag fungerar på samma sätt som varje privat användare som registrerar sig på webbplatsen  och beställer."></i>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control mb-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Företagsnamn krävs, måste vara högst 50 bokstäver!"></i>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="StreetAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StreetAddress" class="form-control mb-2" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Gatuadress krävs, måste vara högst 50 bokstäver!"></i>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="PostalCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PostalCode" class="form-control mb-2" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Postnummer krävs, måste vara högst 50 bokstäver!"></i>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="City"></label>
                </div>
                <div class="col-8">
                    <input asp-for="City" class="form-control mb-2" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Stad krävs, måste vara högst 50 bokstäver!"></i>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control mb-2" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Telefonnummer krävs, måste vara högst 10 siffror!"></i>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="IsAuthorizedCompany"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsAuthorizedCompany" class="form-check-input form-control" />
                </div>
                <div class="col-1">
                    <i class="far fa-question-circle" data-toggle="tooltip" title="Markera företaget som auktoriserat eller lämna det Icke auktoriserat.."></i>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-8 offset-3">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}




