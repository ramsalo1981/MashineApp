
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row  p-4">
    <div class="col-9">
        <h2 class="text-primary">Produktlista </h2>
    </div>
    <div class="col-3 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Skapa ny produkt</a>
